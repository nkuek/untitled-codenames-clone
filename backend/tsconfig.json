{
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "#root/*": ["./src/*"]
        },
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["node"]
    }
  }